<script language="JavaScript">
function validar(form1) {
    if(!document.form1.aluno.value){
        alert("Informe o id do aluno")
        document.form1.aluno.focus()
        return false
    }
    achou=false
    for(i=0;i<=2;i++){ 
        if(document.form1.oper[i].checked){ 
            achou=true
            break
        }
    }
    if (achou)
        return true
    else{
        alert("Informe a operação: Cons., Exc. ou Alt.!" +
              "\n(Consulta, Exclusão ou Alteração)")
        return false 
    }
}
function validar2(form2) {
    if(!document.form2.aluno2.value){
        alert("Informe o id do aluno")
        document.form2.aluno2.focus()
        return false
    }
    achou=false
    for(i=0;i<=1;i++){ 
        if(document.form2.oper2[i].checked){ 
            achou=true
            break
        }
    }
    if(!achou){
        alert("Informe a operação: Alteração e inclusão\nou Exclusão!")
        return false 
    }
}
function validar3(form3) {
    achou=false
    for(i=0;i<=1;i++){ 
        if(document.form3.oper3[i].checked){ 
            achou=true
            break
        }
    }
    if(!achou){
        alert("Informe a operação: Inclusão ou Exclusão!")
        return false 
    }
}
function validar4(form4) {
    achou=false
    for(i=0;i<=1;i++){ 
        if(document.form4.oper4[i].checked){ 
            achou=true
            break
        }
    }
    if(!achou){
        alert("Informe a operação: Inclusão ou Exclusão!")
        return false 
    }
}
</script>
